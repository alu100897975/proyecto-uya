extends layouts/unregistered.pug

block content
    section
        .container
            .access-section.center-block
                .access-title
                    h1 Inicia sesión
                .access-alt ¿Aún no tiene una cuenta?
                        a(href="/join/signup" class="underline") Registrate
                
                form(action="/join/login" method="POST" class="access-form")
                    .input-field
                        label(for="email") Email
                        input(type="email" placeholder="Introduce tu email" name="email" id="email" required)
                    .input-field
                        label(for="password") Contraseña
                        input(type="password" placeholder="Introduce tu contraseña" name="password" id="password" required)
                    .forgot-password
                        a(href="#" class="underline") ¿Olvidaste tu contraseña?
                    .submit
                        input(type="submit" class="btn btn-c-teal" value="Inicia sesión")
                include partials/auth-apps.pug
