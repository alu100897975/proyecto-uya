doctype html
html(lang='es')
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
        title My Home
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
        
        link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet")
        link(rel="stylesheet", href="/public/css/framywork.css")
        link(rel="stylesheet" href="/public/css/styles.css")
        block style
    body
        block variables
        header.main
            nav.navbar.navbar-default
                .container.container-flex
                        .navbar-mobile-icon.flex-expand-w.align-left
                            .mobile-nav-icon#mobile-nav
                                span.bar
                                span.bar
                                span.bar
                        .navbar-toggle.flex-expand-w.align-left
                            ul.navbar-menu.stretch.animated
                                li
                                    a(href="/" class= page== 'calendar'? "active": "") Calendario
                                li
                                    a(href="/chat" class= page== 'chat'? "active": "") Chat
                        .navbar-logo.logo
                            a(href="/") Clasdy
                        .flex-expand-w.align-right
                            ul.navbar-menu
                                if(page=="calendar")
                                    li.pos-relative
                                        button(class="event-form-toggle not-navbar-link" aria-label="Crear evento" id="create-event-button")
                                            i(class="fa fa-plus" aria-hidden="true" style="font-size: 25px")
                                        .popover.popover-create-event#create-event-popover
                                            .close-event-popover.event-form-toggle
                                                button(aria-label="Cancelar creacion evento")
                                                    i(class="fa fa-times" aria-hidden="true")
                                            .create-event
                                                form.form.form-small#create-event-form(method="POST" action="/events")
                                                    .form-group
                                                        .input-field
                                                            label Nombre del evento
                                                            input(type="text" placeholder="Nombre del evento" name="nameEvent")
                                                        .validation-msg
                                                    .form-group
                                                        .input-group.inputs-date-time
                                                            .inputs-date
                                                                .input-field
                                                                    label Dia
                                                                    input(type="number" min="0" max="31" placeholder="10" name="day" required)
                                                                .input-field
                                                                    label Mes
                                                                    input(type="number" min="1" max="12" placeholder="11" name="month" required)
                                                                .input-field
                                                                    label Año
                                                                    input(type="number" min="2017" placeholder="2017" name="year" required)
                                                            .inputs-time
                                                                .input-field
                                                                    label Hora
                                                                    input(type="number"  max="23" placeholder="09" name="hour")
                                                                .points
                                                                .input-field
                                                                    label Min
                                                                    input(type="number" min="0" max="59" placeholder="30" name="minutes")
                                                        .validation-msg
                                                    .form-group
                                                        .input-field
                                                            label Observaciones
                                                            input(type="text" placeholder="Observaciones" name="observations")
                                                    .submit
                                                        input(type="submit" class="btn btn-outline-teal" value="Crear evento")
                                li
                                    button.not-navbar-link
                                        i(class="fa fa-user-circle-o" aria-hidden="true" style="font-size: 25px")
        section.content
            block content
        footer
            .container © Copyright  2017
    script(
          src="https://code.jquery.com/jquery-2.2.4.min.js"
          integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
          crossorigin="anonymous"
          )
    script.
        $('#mobile-nav').on('click', function(){
            $('.navbar').toggleClass('is-open');
        });
    block scripts
        
