extends layouts/registered.pug

block content
  link(rel="stylesheet" href="/public/css/chat.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")

  body
    div(class="container")
      h1(id="titulo") Chatea con tus compa√±eros
      div(class="row")
        div(class="col s12 m12 l12")
          div(class="card teal accent-4")
            div(id="messages")
      div(class="row") 
        form(class="col s12 m12 l12" onsubmit="return addMessage(this);")
          div(class="row")
            div(class="input-field col s10 m10 l10")
              input(type="text" id="text" placeholder="Mensaje..." class="validate")
            div(class="col s2 m2 l2")
              button(class="btn waves-effect waves-light" id="boton-mensaje" type="submit" name="action") Enviar
            
block scripts
  script(src="/socket.io/socket.io.js")
  script(src="/public/js/client_chat.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js")
