extends layouts/unregistered.pug

block content
    section
        .container
            .access-section.center-block
                .access-title
                    h1 Registrate
                .access-alt ¿Ya tienes una cuenta?
                        a(href="/join/login" class="underline") Inicia sesión
                
                form(action="/join/signup" method="POST" class="access-form")
                    .input-field
                        label(for="name") Nombre
                        input(type="text" placeholder="Introduce tu nombre" name="name" id="name" required)
                    .input-field
                        label(for="email") Email
                        input(type="email" placeholder="Introduce tu email" name="email" id="email" required)
                    .input-field
                        label(for="password") Contraseña
                        input(type="password" placeholder="Introduce tu contraseña" name="password" id="password" required)
                    .submit
                        input(type="submit" class="btn btn-c-teal" value="Registrarse")
                include partials/auth-apps.pug
